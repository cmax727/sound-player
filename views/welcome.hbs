{{> _noplayer}}
{{#contentFor "sidebar"}}
    <h1> Welcome </h1>
    <em>The Signature Player allows searching, browsing, and downloading of cutting edge music selects from Signature Tracks.</em>
{{/contentFor}}

{{#contentFor "top_genres"}}
    {{#top_genres}}
        <li  class="{{class}}"><a href="/dashboard/{{top_genre}}">{{top_genre}}</a></li>
    {{/top_genres}}

{{/contentFor}}

<!DOCTYPE HTML>

<html lang="en-us">
<head>
    <title>Welcome | Signature Tracks | Signature Player</title>

    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8, max-scale=0.8, user-scalable=no">


    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/music.css" rel="stylesheet">

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

    {{{block "scripts"}}}
    <style>
        #right_list2 {
            width: 70%;
        }
    </style>
</head>
<script>
    $(document).ready(function(){
        $(".music-sidebar-border").css("top", '111px');
        $(".music-welcome").css("top", '111px');
    })
</script>
<body class="page-welcome">
    <div class="navbar navbar-inverse navbar-fixed-top">
        {{{block "header_block"}}}
        <div class="navbar-inner">
            <div class="container-fluid music-navbar">

                <div class="nav-logo"><img src="/images/logo.png">
                    <!--<div style="display:block;float:right">SIGNATURE <font color="white">TRACKS</font><br/>
                        <a href="#" style="color:#0386C8 !important;">Cutting Edge Music Selects For TV and Flim</a></div> -->
                </div>
                <ul class="nav">
                <li><a href="/dashboard">Browse<br/>Categories</a></li>
                <li><a href="/playlist">Personal<br/>Playlists</a></li>
				<li><a href="/userinfo">User<br/>Settings</a></li>
                <li><a href="/downloadhistory">Downloads<br/>History</a></li>
                <li><a href="/searchhistory">Search<br/>History</a></li>

                    <li class="search">
                        <form class="navbar-search pull-right" method="get" action="/search">
                            <input type="text" class="search-query" placeholder="Search tracks" name="q">
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="music-sidebar music-sidebar-border">
        <div style="padding: 10px">
            {{{block "sidebar"}}}
        </div>
    </div>
    <div class="music-content music-welcome">

        <form class="welcome-search" method="get" action="/search">
            <input type="text" class="search-query-welcome" placeholder="Begin your search here" name="q">
        </form>
        <div id="bar_browse-welcome" style="margin-bottom: 20px">
            <p class="txt_browse" >Browse by Genre</p>
            <p class="txt_category" >Select a Category to View Sub-Categories</p>
        </div>

    </div>

    <div class="music-content" style="top:350px;">
        <div id="right_list1" class="right_list" style="display:none; border-top:solid 1px">
            <ul>
                {{{block "top_genres"}}}
            </ul>
        </div>
        <div id="right_list2"  class="right_list" style="border-top:solid 1px">
            <ul>
                {{#genres}}
                    <li><a href="/genre/{{genre}}">{{genre}}</a></li>
                {{/genres}}
            </ul>
        </div>
    </div>

</body>